@model Mission08_Team0303.Models.TaskItem

<form asp-action="DeleteTask" method="post">
    <input type="hidden" asp-for="TaskItemID" />

    <h3>Are you sure you want to delete this task?</h3>
    <p><strong>Task:</strong> @Model.TaskName</p>

    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a asp-action="Matrix" class="btn btn-secondary">Cancel</a>
</form>